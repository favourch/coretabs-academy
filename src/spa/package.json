{
  "name": "coretabs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --no-clean",
    "serve-api": "vue-cli-service serve --no-clean --https --host local.coretabs.net --mode api",
    "build": "vue-cli-service build --no-clean",
    "lint": "vue-cli-service lint",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config client.config.js --hot --inline",
    "client": "cross-env NODE_ENV=production webpack --config client.config.js --progress --hide-modules",
    "server": "cross-env NODE_ENV=production webpack --config server.config.js --progress --hide-modules",
    "ssr": "npm run client && npm run server",
    "start": "node express"
  },
  "dependencies": {
    "@chenfengyuan/vue-countdown": "^1.1.0",
    "@vue/cli": "^3.0.0",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "connect-history-api-fallback": "^1.5.0",
    "express": "^4.16.3",
    "highlight.js": "^9.12.0",
    "js-cookie": "^2.2.0",
    "phantomjs-prebuilt": "^2.1.16",
    "raven-js": "^3.26.4",
    "rfs": "^7.1.3",
    "showdown": "^1.8.6",
    "siema": "^1.5.1",
    "vue": "^2.5.17",
    "vue-carousel": "^0.7.3",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.17",
    "vue-youtube": "^1.2.5",
    "vuejs-countdown": "^0.2.1",
    "vuetify": "^1.0.19",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-service": "^3.0.0",
    "@vue/eslint-config-standard": "^3.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^1.0.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.3",
    "patch-package": "^6.0.5",
    "sass-loader": "^6.0.6",
    "vue-loader": "^14.2.3",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ],
      "stage-3"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "indent": 0,
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
